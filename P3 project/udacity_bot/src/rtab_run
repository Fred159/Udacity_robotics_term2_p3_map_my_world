#! /bin/bash

echo ' '
read -p 'Would you like to clear the previous map database? (y/n): ' ansinput

if [ “$ansinput” = “y” ]
then
 printf '\n Map deleted \n'
 rm -f ~/.ros/rtabmap.db

elif [ “$ansinput” = “n” ]
then
 printf '\n Map kept \n'

else
 echo 'Warning: Not an acceptable option. Choose (y/n).
         '
fi

echo ' '

read -p 'Enter target world destination or d for default: ' input_choice

if [ “$input_choice” = “d” ]
then
echo 'start launch udacity world.launch file'
 x-terminal-emulator -x roslaunch udacity_bot udacity_world.launch world_file:=home/ming/catkin_ws/src/udacity_bot/worlds/kitchen_dining.world 2>/dev/null &

else
 x-terminal-emulator -x roslaunch udacity_bot world.launch world_file:=$input_choice 2>/dev/null &
fi

sleep 3 &&

x-terminal-emulator -x roslaunch udacity_bot teleop.launch 2>/dev/null &

sleep 3 &&

echo ' '
read -p 'Press any key to continue to mapping... ' -n1 -s

x-terminal-emulator -x roslaunch udacity_bot mapping.launch simulation:=true 2>/dev/null &
sleep 3 &&
x-terminal-emulator -e roslaunch udacity_bot rviz.launch 2>/dev/null

echo ' '
echo 'Script Completed'
echo ' '
